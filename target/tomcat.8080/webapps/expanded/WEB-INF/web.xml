<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<description>
	This is a web application, that is used to send commands and receive answers from home Linux driven PC
	</description>
	
	<servlet>
        <servlet-name>PollerAnswerer</servlet-name>
        <servlet-class>com.kadylo.janus.PollerAnswerer</servlet-class>
		<description>This servlet answers to the PC's poller requests</description>
    </servlet>
	
	<servlet>
        <servlet-name>UserHandler</servlet-name>
        <servlet-class>com.kadylo.janus.UserHandler</servlet-class>
		<description>This servlet answers to user's requests</description>
    </servlet>
	
    <servlet-mapping>
        <servlet-name>PollerAnswerer</servlet-name>
		<!--has to be secret path on which it polls-->
        <url-pattern>/poihe9829bUE730JSShhe3kk3</url-pattern>
    </servlet-mapping>
	
	 <servlet-mapping>
        <servlet-name>UserHandler</servlet-name>
		<!--has to be secret path but now it's simple-->
        <url-pattern>/k</url-pattern>
    </servlet-mapping>
	
</web-app>
